<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Medidor de Glicose</name>
    <description>
        Aplicativo para acompanhamento dos n√≠veiis de glicose
    </description>
    <author email="juliandro.rocha@gmail.com" href="http://juliandror.github.io">
        Juliandro Rocha Ribeiro
    </author>
    <icon density="mdpi" height="90" platform="android" src="www/img/logo.png" width="90" />
    <preference name="StatusBarBackgroundColor" value="#888B8D" />
	<preference name="StatusBarStyle" value="darkcontent" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
